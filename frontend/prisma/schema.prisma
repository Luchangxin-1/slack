generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model users {
  id           Int      @id  @default(autoincrement())
  name         String   
  email        String   @unique 
  hash_password String  
  avatarUrl String?
  is_active    Boolean  @default(false)
  @@index([name])
  @@index([email])
}
model workspace {
  userId String
  name String
  workSpaceId String   @id @default(uuid()) 
  users Json
  channels   channel[]  @relation("WorkspaceChannels")

}

model channel{
   channelId String   @id @default(uuid()) 

  name String
  workspaceId String
 workspace   workspace @relation(fields: [workspaceId], references: [workSpaceId], name: "WorkspaceChannels")

}
